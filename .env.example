# B3ACON Shopify App Environment Variables

# Application Settings
VITE_APP_NAME=B3ACON
VITE_APP_ENV=development

# SerpAPI Configuration (Required for prospecting and SEO)
VITE_SERPAPI_KEY=your_serpapi_key_here

# Klaviyo Configuration (Optional - for email integration)
VITE_KLAVIYO_API_KEY=your_klaviyo_api_key_here

# Google Services (Optional - for enhanced SEO features)
VITE_GOOGLE_MY_BUSINESS_API_KEY=your_gmb_api_key_here
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
VITE_GOOGLE_SEARCH_CONSOLE_KEY=your_gsc_key_here

# Amazon Integration (Optional - for cross-platform features)
VITE_AMAZON_ADVERTISING_CLIENT_ID=your_amazon_client_id_here
VITE_AMAZON_ADVERTISING_CLIENT_SECRET=your_amazon_client_secret_here

# Shopify App Configuration (Required for app store version)
VITE_SHOPIFY_API_KEY=your_shopify_api_key_here
VITE_SHOPIFY_API_SECRET=your_shopify_api_secret_here
VITE_SHOPIFY_SCOPES=read_products,read_product_listings,read_inventory,read_orders

# Development Settings
VITE_DEBUG_MODE=true
VITE_API_BASE_URL=http://localhost:3000/api