# ==========================================
# B3ACON API Environment Configuration
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_VERSION=1.0.0

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/b3acon
MONGODB_TEST_URI=mongodb://localhost:27017/b3acon_test

# Redis Configuration (Optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@b3acon.com
FROM_NAME=B3ACON

# SendGrid Email Templates
SENDGRID_WELCOME_TEMPLATE=d-welcome123
SENDGRID_ORDER_TEMPLATE=d-order123
SENDGRID_TRACKING_TEMPLATE=d-tracking123
SENDGRID_ABANDONED_CART_TEMPLATE=d-cart123
SENDGRID_AFFILIATE_WELCOME_TEMPLATE=d-affiliate123
SENDGRID_COMMISSION_TEMPLATE=d-commission123
SENDGRID_CROSS_SELL_TEMPLATE=d-crosssell123
SENDGRID_PROSPECTING_TEMPLATE=d-prospect123
SENDGRID_PASSWORD_RESET_TEMPLATE=d-reset123
SENDGRID_PAYOUT_TEMPLATE=d-payout123

# SEO API Keys
GOOGLE_SEARCH_CONSOLE_API_KEY=your_gsc_api_key_here
GOOGLE_PAGESPEED_API_KEY=your_pagespeed_api_key_here
SEMRUSH_API_KEY=your_semrush_api_key_here
AHREFS_API_KEY=your_ahrefs_api_key_here

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret_here

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Affiliate Tracking
AFFILIATE_TRACKING_DOMAIN=track.b3acon.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,csv

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/b3acon.log

# External API Timeouts (in milliseconds)
API_TIMEOUT=30000
WEBHOOK_TIMEOUT=10000

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Development/Testing
ENABLE_DEMO_MODE=true
DEMO_DATA_RESET_INTERVAL=86400000

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token_here

# Third-party Integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=b3acon-uploads

# CDN Configuration
CDN_URL=https://cdn.b3acon.com

# Monitoring and Error Tracking
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# Feature Flags
FEATURE_AI_RECRUITMENT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_TRACKING=true
FEATURE_EMAIL_AUTOMATION=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Database Pool Configuration
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME=30000
DB_CONNECTION_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# Email Queue Configuration
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_QUEUE_DELAY=1000

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# ==========================================
# Production Environment Overrides
# ==========================================

# In production, make sure to:
# 1. Use strong, unique secrets for JWT_SECRET and SESSION_SECRET
# 2. Set NODE_ENV=production
# 3. Use production database URI
# 4. Use production API keys
# 5. Set proper CORS origins
# 6. Enable HTTPS
# 7. Set up proper logging and monitoring