{
  "name": "b3acon-api",
  "version": "1.0.0",
  "description": "B3ACON API - Complete backend for e-commerce optimization platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "build": "echo 'No build step required for Node.js backend'",
    "docker:build": "docker build -t b3acon-api .",
    "docker:run": "docker run -p 3001:3001 b3acon-api"
  },
  "keywords": [
    "ecommerce",
    "shopify",
    "seo",
    "affiliate",
    "tracking",
    "analytics",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "B3ACON Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.4",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "crypto": "^1.0.1",
    "axios": "^1.6.2",
    "@sendgrid/mail": "^8.1.0",
    "redis": "^4.6.11",
    "rate-limit-redis": "^4.2.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "slugify": "^1.6.6",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.6.1",
    "winston": "^3.11.0",
    "express-winston": "^4.2.0",
    "express-validator": "^7.0.1",
    "stripe": "^14.9.0",
    "shopify-api-node": "^3.12.6",
    "nodemailer": "^6.9.7",
    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-slow-down": "^2.0.1",
    "hpp": "^0.2.3",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.4",
    "mongodb-memory-server": "^9.1.3",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SparkFusion25/b3acon-production.git"
  },
  "bugs": {
    "url": "https://github.com/SparkFusion25/b3acon-production/issues"
  },
  "homepage": "https://b3acon.com",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-underscore-dangle": "off",
      "consistent-return": "off"
    }
  }
}