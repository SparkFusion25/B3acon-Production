# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
NODE_ENV=development
PORT=3000
HOST_NAME=your-domain.com
HOST_SCHEME=https

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/b3acon-shopify

# Security & CORS
ALLOWED_ORIGINS=https://your-domain.com,https://admin.shopify.com
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Third-party API Keys (for optimization services)
TINYPNG_API_KEY=your_tinypng_api_key
SEMRUSH_API_KEY=your_semrush_api_key
GOOGLE_PAGESPEED_API_KEY=your_google_pagespeed_api_key

# B3ACON Platform Integration
B3ACON_API_URL=https://api.b3acon.com
B3ACON_API_KEY=your_b3acon_api_key
B3ACON_WEBHOOK_SECRET=your_b3acon_webhook_secret

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Feature Flags
ENABLE_REAL_OPTIMIZATION=false
ENABLE_SEO_ANALYSIS=true
ENABLE_COMPETITOR_TRACKING=true
ENABLE_AUTO_OPTIMIZATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Subscription & Billing
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Development Configuration
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true
TRUST_PROXY=true